{
  "name": "inc2734/wp-customizer-framework",
  "description": "A library for WordPress Customizer.",
  "license": "GPL-2.0-or-later",
  "require": {
    "php": ">=5.6"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "*",
    "wp-coding-standards/wpcs": "*",
    "phpunit/phpunit": "7.*",
    "phpcompatibility/phpcompatibility-wp": "*",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.4.3"
  },
  "authors": [
    {
      "name": "Takashi Kitajima",
      "email": "inc@2inc.org"
    }
  ],
  "autoload": {
    "psr-4" : {
      "Inc2734\\WP_Customizer_Framework\\" : "src"
    }
  },
  "scripts": {
    "test": [
      "vendor/bin/phpcs --config-set installed_paths vendor/phpcompatibility/php-compatibility,vendor/phpcompatibility/phpcompatibility-paragonie,vendor/phpcompatibility/phpcompatibility-wp,vendor/wp-coding-standards/wpcs",
      "vendor/bin/phpcs -p -s -v -n . --standard=./.phpcs.xml.dist --extensions=php",
      "bash bin/phpunit.sh"
    ],
    "phpcbf": "vendor/bin/phpcbf -p -s -v -n . --standard=./codesniffer.ruleset.xml --extensions=php"
  }
}
